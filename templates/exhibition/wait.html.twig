        <div class="image"></div>
        <div class="infos">
            <h2><span class="alternative-font">Camille Claudel,</span> {% trans %}exhibition.wait.ticket.title{% endtrans %}</h2>
            <div class="details">
                <div class="people">
                    <div>
                        <p>{{ ticket.user.lastName ~ ' ' ~ ticket.user.firstName }}</p>
                    </div>
                    <div>
                        <p>{{ ticket.user.email }}</p>
