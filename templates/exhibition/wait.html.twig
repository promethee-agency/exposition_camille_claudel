                        <p>{{ ticket.reservation.reservationAt|date('d/m/Y') }}</p>
                        <p>{# {{ ticket.reservation.reservationAt|date('h') ~ 'h' }} #}16h</p>
                    </div>
                    <p>{{ ticket.category.price ~ '€'}}</p>
                </div>
                
            </div>
        </div>
    </div>
{% endfor %}

